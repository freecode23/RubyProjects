<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2> Edit a game for sale </h2>
      <%= simple_form_for([@user, @user_game]) do |f| %>
      <%= f.association :game %>
      <%= f.input :sale_price %>
      <p><strong>Condition</strong></p>
      <%= f.select(:condition, UserGame::CONDITIONS) %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




