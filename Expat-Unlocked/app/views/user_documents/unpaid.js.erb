function deleteButton(partial) {
  const button = document.getElementById('<%= @user_document.id %>-unpaid-document');
  button.parentNode.parentNode.removeChild(button.parentNode)
}

function addCard(partial) {
  const element = document.querySelector('.due-cards');
  element.insertAdjacentHTML('beforeend', partial);
}


deleteButton('<%= j render "profiles/paid", user_document: @user_document %>');
addCard('<%= j render "profiles/due-card", user_document: @user_document %>');
