<div class="bills-list__item">
  <%= link_to "", user_document_path(user_document), class: "bills-list__link",
  method: :get %>
  <div class="bills-list__company">
    <% if user_document.document.company_name %>
       <%= user_document.document.company_name %> 
    <% else %>
        "Unrecognizable Bill, Sorry"
    <% end %>
  </div>
  <div class="bills-list__due-date">
    <%= user_document.due_date.strftime("%b %d, %Y") %>
  </div>
  <div class="bills-list__due">
    Â¥<%= number_with_delimiter user_document.current_due_amount %>
  </div>
  <div class="bills-list__paid">
    <% if user_document.state %>
    <p class="bills-list__status">Paid</p>
    <% end %>
  </div>
</div>
